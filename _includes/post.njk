---
layout: base.njk
---
<h1 class="title-page">{{ title }}</h1>
{% if date %}
<h3><time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time></h3>
{% endif %}
<div>
{% for tag in tags %}
  {%- if tag != "posts" -%}
  {%- if tag != "nav" -%}
  {% set tagUrl %}/tags/{{ tag }}/{% endset %}
  <a href="{{ tagUrl | url }}" class="tag">#{{ tag }}</a>
  {%- endif -%}
  {%- endif -%}
{% endfor %}
</div>

{{ content | safe }}
