<ul>
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <strong><a href="{{ post.url | url }}" class="postlist-link">{{ post.data.title }}</a></strong>
    {% for tag in post.data.tags %}
      {%- if tag != "posts" -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">#{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    <br>
    <small><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></small>
  </li>
{% endfor %}
</ul>
